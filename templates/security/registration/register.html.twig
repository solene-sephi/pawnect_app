{% extends 'security/layout.html.twig' %}

{% block page_title_text %}
	Create an account
{% endblock %}

{% block content %}
	{{ form_start(registrationForm) }}

	<div>{{ form_errors(registrationForm) }}</div>

	<form class="space-y-4 md:space-y-6" action="{{ path('app_register') }}">
		{{ form_row(registrationForm._token) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
		{{ form_row(registrationForm.agreeTerms) }}

		<twig:Button type="submit" color="secondary" isfullwidth class="mb-0" iconafter="iconamoon:arrow-right-1-light">Create an account</twig:Button>
	</form>

	{{ form_end(registrationForm) }}

	<p class="text-sm font-light">
		Already have an account?
		<a href="{{ path('app_login') }}" class="font-medium text-secondary-600 hover:underline">Login here</a>
	</p>
{% endblock %}
